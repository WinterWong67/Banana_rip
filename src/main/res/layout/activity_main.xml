<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <Button
            android:id="@+id/selectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Banana Photo"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/resultText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Result will appear here"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:gravity="center"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location Services"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/getLocationButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get My Location"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#2196F3"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="16dp"/>
            
        <Button
            android:id="@+id/findSupermarketsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Nearby Supermarkets"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:padding="16dp"/>

        <TextView
            android:id="@+id/locationStatusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location status will appear here"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/supermarketsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nearby supermarkets will appear here"
            android:textSize="14sp"
            android:gravity="center"/>

    </LinearLayout>
</ScrollView>